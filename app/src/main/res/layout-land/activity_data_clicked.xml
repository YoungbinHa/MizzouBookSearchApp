<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    android:orientation="vertical"
    tools:context=".DataClickedActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1.5"
        android:padding="8dp"
        android:shrinkColumns="*"
        android:visibility="gone">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"
                android:padding="3dp"
                android:text="Book Code"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="Code Range"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:padding="3dp"
                android:text="Floor"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="Column #"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/colorPrimary">


            <TextView
                android:id="@+id/BookCodeTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="3dp"
                android:text="-"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorAccent"
                />
            <TextView
                android:id="@+id/BookCodeRange_TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/colorAccent"
                android:text="TextView"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light" />
            <TextView
                android:id="@+id/FloorTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="3dp"
                android:text="TextView"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/RangeTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/colorAccent"
                android:text="TextView"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                />

        </TableRow>
    </TableLayout>

    <com.example.booksearchapp.ZoomableImageView
        android:id="@+id/PathImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/PathTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_span="3"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="3dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        android:fontFamily="sans-serif-light"
        android:visibility="gone"/>

</LinearLayout>